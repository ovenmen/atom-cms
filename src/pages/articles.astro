---
import { navigationConfig } from '../../configs/navigation-config';
import { rest } from '../../models/rest';
import { Header } from '../components/header';
import { Navigation } from '../components/navigation';
import Layout from '../layouts/Layout.astro';

rest.setUrl('https://fakestoreapi.com/products')
const articles = await rest.getData()

---

<Layout title="Welcome to Atom CMS | Articles">
	<header>
		<Navigation config={navigationConfig.getConfig()} />
	</header>
	<main>
		<Header title="Articles" />
        <section class="grid grid-cols-3 gap-4 container mx-auto">
            {articles.map(article => (
                <div class="shadow-lg rounded-md border p-3 overflow-hidden">
                    <h3 class="text-center text-xl mb-6">{article.title}</h3>
                    <p>{article.description}</p>
                </div>
            ))}
        </section>
	</main>
</Layout>
